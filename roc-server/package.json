{
  "name": "roc-server",
  "version": "0.0.3",
  "private": true,
  "scripts": {
    "start": "node ./build/src/app.js",
    "build": "babel --presets @babel/preset-typescript --out-dir build --copy-files src/{app,db/index,routes/index}.ts",
    "prebuild": "mkdir -p ./build/{src,static,templates} && cp -Rf ./templates/* ./build/templates/ && cp -Rf ./static/* ./build/static/",
    "formatcheck": "./node_modules/.bin/eslint --fix src/{app,db/index,routes/index}.ts && ./node_modules/.bin/eslint --plugin prettier --fix src/{app,db/index,routes/index}.ts",
    "start:dev": "nodemon build/src/app.js",
    "build:dev": "yarn prebuild && tsc --watch",
    "buildone:dev": "yarn prebuild && tsc",
    "dev": "concurrently \"npm:build:dev\" \"npm:start:dev\"",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix src/*.ts src/**/*.ts",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "eslintConfig": {
    "extends": "./node_modules/gts/",
    "overrides": [
      {
        "files": [
          "src/*.ts",
          "src/**/*.ts"
        ],
        "rules": {
          "node/no-extraneous-import": "off",
          "@typescript-eslint/no-explicit-any": 1,
          "@typescript-eslint/no-extraneious/import": "off",
          "no-unused-vars": "off",
          "@typescript-eslint/no-unused-vars": [
            "error",
            {
              "args": "none",
              "vars": "local"
            }
          ],
          "@typescript-eslint/no-inferrable-types": [
            "warn",
            {
              "ignoreParameters": true
            }
          ]
        }
      }
    ]
  },
  "dependencies": {
    "@curveball/http-errors": "^0.4.0",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/node-fetch": "^2.5.10",
    "@types/pg": "^7.14.11",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "es6-promise": "^4.2.8",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react-native": "^3.10.0",
    "express": "~4.16.1",
    "gts": "^3.1.0",
    "isomorphic-fetch": "^3.0.0",
    "morgan": "~1.9.1",
    "node-fetch": "^2.6.1",
    "nunjucks": "^3.2.3",
    "pg-promise": "^10.10.1",
    "prettier": "^2.2.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-0",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bluebird": "^3.5.33",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.37",
    "@types/nunjucks": "^3.1.4",
    "@types/pg-promise": "^5.4.3",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-react": "^7.23.2",
    "gts": "^3.1.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
