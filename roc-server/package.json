{
  "name": "roc-server",
  "version": "0.0.4",
  "private": true,
  "tsfiles": [
    "src/index.ts",
    "src/db/index.ts",
    "src/auth/index.ts",
    "src/utils/index.ts",
    "src/routes/index.ts",
    "src/user/index.ts"
  ],
  "scripts": {
    "start": "node ./build/src/app.js",
    "prebuild": "mkdir -p ./build/src ./build/static ./build/templates && cp -Rf ./templates/* ./build/templates/ && cp -Rf ./static/* ./build/static/ && yarn formatcheck",
    "build": "yarn prebuild && tsc --incremental",
    "formatcheck": "./node_modules/.bin/eslint --plugin prettier --fix src/{app,db/index,utils/index,auth/index,routes/index,user/index}.ts",
    "start:dev": "nodemon build/src/app.js",
    "build:dev": "yarn prebuild && tsc --watch",
    "buildone:dev": "yarn prebuild && tsc",
    "full": "yarn clean && yarn build && yarn start",
    "dev": "concurrently \"npm:build:dev\" \"npm:start:dev\"",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix src/*.ts src/**/*.ts",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "eslintConfig": {
    "extends": "./node_modules/gts/",
    "overrides": [
      {
        "files": [
          "src/*.ts",
          "src/**/*.ts"
        ],
        "rules": {
          "node/no-extraneous-import": "off",
          "@typescript-eslint/no-explicit-any": 1,
          "@typescript-eslint/no-extraneious/import": "off",
          "no-unused-vars": "off",
          "@typescript-eslint/no-unused-vars": [
            "error",
            {
              "args": "none",
              "vars": "local"
            }
          ],
          "@typescript-eslint/no-inferrable-types": [
            "warn",
            {
              "ignoreParameters": true
            }
          ]
        }
      }
    ]
  },
  "dependencies": {
    "argon2": "^0.28.2",
    "bluebird": "^3.7.2",
    "bluefish": "^0.0.1-security",
    "cli": "^1.0.1",
    "cli-color": "^2.0.3",
    "commander": "^9.4.0",
    "cookie-parser": "^1.4.5",
    "eslint": "^7.31.0",
    "express": "^4.18.1",
    "http-basic": "^8.1.3",
    "jest-cli": "^28.1.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.19",
    "nunjucks": "^3.2.3",
    "passport": "^0.4.1",
    "passport-json": "^1.2.0",
    "passport-local": "^1.0.0",
    "pg-promise": "^10.11.1",
    "prettier": "^2.3.2",
    "repl": "^0.1.3",
    "ts-node-dev": "1.1.8",
    "tsc": "^2.0.3"
  },
  "devDependencies": {
    "-": "^0.0.1",
    "@types/bluebird": "^3.5.36",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.4.1",
    "@types/nunjucks": "^3.1.5",
    "@types/passport-local": "^1.0.34",
    "@types/pg-promise": "^5.4.3",
    "acorn": "^8.8.0",
    "gts": "^3.1.0",
    "jest": "^28.1.3",
    "ts-node": "10.8.0",
    "tslint": "^6.1.3",
    "typescript": "^4.6.4"
  }
}
